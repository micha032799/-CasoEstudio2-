@model CasoEstudio2.Entities.CasaEnt

@{
    ViewBag.Title = "AlquilerCasas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">

                <h3 class="card-title text-left mb-3">Alquiler de las casas</h3>

                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-info" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("AlquilerCasas", "Casas", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @Html.HiddenFor(m => m.IdCasa)

                    <div class="form-group mb-3">
                        @Html.DropDownListFor(m => m.DescripcionCasa, ViewBag.Alquiler as List<SelectListItem>, new { @onchange = "ConsultarPrecio()", @class = "form-control form-control-lg", @placeholder = "Seleccionar la casa" })
                    </div>

                    <div class="form-group mb-3">
                        @Html.TextBox("Precio casa", null, new {  @class = "form-control form-control-lg", @placeholder = "Precio Casa", @readonly = "readonly", })
                    </div>

                    <div class="form-group mb-3">
                        @Html.TextBox("Usuario alquiler", null, new { @class = "form-control form-control-lg", @placeholder = "Usuario alquiler" })
                    </div>

                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-danger btn-lg font-weight-medium auth-form-btn" value="Alquilar la casa">
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script src="~/Funcion/ConsultarPrecio.js"></script>