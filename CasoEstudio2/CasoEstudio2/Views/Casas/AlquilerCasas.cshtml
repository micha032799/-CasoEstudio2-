@model CasoEstudio2.Entities.CasaEnt

@{
    ViewBag.Title = "AlquilerCasas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper d-flex align-items-center auth px-0">
    <div class="row w-100 mx-0">
        <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                <div class="brand-logo">
                    <img src="~/template/images/logo.svg" alt="logo">
                </div>
                <h3 class="card-title text-left mb-3">Perfil de Usuario</h3>

                @if (ViewBag.MensajeUsuario != null)
                {
                    <div class="alert alert-info" role="alert" style="text-align:center">
                        @ViewBag.MensajeUsuario
                    </div>
                }

                @using (Html.BeginForm("AlquilerCasas", "Casas", FormMethod.Post, new { @class = "pt-3" }))
                {
                    @Html.HiddenFor(m => m.IdCasa)

                    <div class="form-group">
                        @Html.DropDownListFor(m => m.DescripcionCasa, ViewBag.Alquiler as List<SelectListItem>, new { @class = "form-control form-control-lg", @type = "text", @placeholder = "Seleccionar la casa" })
                    </div>

                    <div class="form-group">
                        @Html.TextBox( "hola",null, new { @readonly = "@readonly", @class = "form-control form-control-lg", @type = "text", @placeholder = "Precio Casa" })
                    </div>
                    <div class="form-group">
                        @Html.TextBox("Usuario alquiler",null, new {  @class = "form-control form-control-lg", @type = "text", @placeholder = "usuario alquiler" })
                    </div>




                    <div class="mt-3">
                        <input type="submit" class="btn btn-block btn-danger btn-lg font-weight-medium auth-form-btn" value="Actualizar Perfil">
                    </div>
                }

            </div>
        </div>
    </div>
</div>
